@model IEnumerable<Project1.Models.Lesson>
@{
    if (Model.Count() < 1)
    {
        <p>No Lesson in database yet.</p>
    }
    else
    {
        <h3>All Lessons</h3>
        <table border="1">
            <tr>
                <th>Lesson Id</th>
                <th>Skill Level</th>
                <th>Tuition</th>
            </tr>
            @foreach (var l in Model)
            {
                <tr>
                    <td>@l.LessonId</td>
                    <td>@l.SkillLevel</td>
                    <td>@l.Tuition</td>
                </tr>
            }
        </table>
    }
}